%% -*- mode: erlang;erlang-indent-level: 2;indent-tabs-mode: nil -*-
%% -*- coding: utf-8 -*-

{erl_opts, [
 debug_info,
 warnings_as_errors,
 warn_untyped_record,
 {platform_define, "^[0-9]+", namespaced_types}
]}.

{plugins, [{pc, "~> 1.11"}]}.

{artifacts, ["priv/syslog_drv.so"]}.

{provider_hooks, [
  {post,
     [
       {compile, {pc, compile}},
       {clean, {pc, clean}}
     ]
}]}.
